import os

Import('env')

home = os.environ['HOME']
cross = env['CROSS']

pwd = os.getcwd()

downloads = home + '/downloads'

kernel = env.Command(pwd + '../../filesystem/kernel_files/vmlinux.gz', 0, 'cd ' + pwd + ' && ./build_kernel.sh ' + downloads + ' ' + cross)
Return('kernel')

