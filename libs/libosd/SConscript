#!/usr/bin/python
#
# libosd
#

Import ('env')

dir = env['BUILD_DIR']
target = env['TARG']
libdir = env['INSTLIBDIR']

src = [ 'init.c', 'osd.c', 'surface.c', 'fonts/CaslonRoman-1.25.c']

lib = env.StaticLibrary('osd', src, CPPPATH = [ env['INCDIR'], '.' ])

inst = env.Install(libdir, lib)

if target == 'mvp':
	osdtest = env.Program('osdtest',
	      	              [ 'osdtest.c' ],
	                      CPPPATH = [ env['INCDIR'] ],
	                      LIBS = [ 'osd' ],
	                      LIBPATH = [ '.' ],
	                      LINKFLAGS = [ '-static' ])
	env.Depends(osdtest, lib)

Return('inst')
