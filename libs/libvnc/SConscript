#!/usr/bin/python
#
# $Id: SConscript 20 2006-03-14 05:26:56Z gettler $
#

Import ('env')

dir = env['BUILD_DIR']
target = env['TARG']
libdir = env['INSTLIBDIR']
cppflags = env['CPPFLAGS']
vnc = env.Copy()

vnc.Replace(CCFLAGS = '-O3 -g')

if target == 'host':
	cppflags = ''

src = [ 'd3des.c', 'nanox.c', 'rfbproto.c', 'sockets.c', 'vncauth.c' ]

lib = vnc.StaticLibrary('vnc', src,
                        CPPFLAGS = cppflags,
                        CPPPATH = [ env['INCDIR'], env['INSTINCDIR'], '.' ])

inst = vnc.Install(libdir, lib)

Return('inst')
