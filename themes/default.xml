<mvpmctheme version="0">
  <!--
     - example mvpmc theme
     - This gives you something similar to the default interface.
     - http://mvpmc.sourceforge.net/
     - $Id$
    -->

  <!--
     - Load fonts (ignored under X11)
    -->
  <font name="standard">/etc/helvR10.fnt</font>
  <font name="large">/etc/helvB18.pcf</font>

  <!--
     - Program settings
    -->
  <settings name="screensaver">
    <item name="timeout">300</item>
  </settings>

  <settings name="video">
    <item name="seek_osd_timeout">0</item>
    <item name="pause_osd">0</item>
  </settings>

  <!--
     - Graph widget settings
    -->
  <widget type="graph" name="busy_graph">
    <color type="left">black</color>
    <color type="right">red</color>
    <style type="border_size">0</style>
    <color type="bg">black</color>
  </widget>

  <widget type="graph" name="splash_graph">
    <color type="left">black</color>
    <color type="right">red</color>
    <color type="border">gray60</color>
    <style type="border_size">2</style>
    <color type="bg">black</color>
  </widget>

  <widget type="graph" name="offset_graph">
    <color type="bg" alpha="50%">black</color>
    <color type="fg" alpha="50%">orange</color>
  </widget>

  <!--
     - Text widget settings
    -->
  <widget type="text" name="splash">
    <color type="bg">black</color>
    <color type="fg">green</color>
    <font>large</font>
  </widget>

  <widget type="text" name="myth_info">
    <color type="bg" alpha="0%">black</color>
    <color type="fg">white</color>
    <font>large</font>
  </widget>

  <widget type="text" name="myth_program">
    <color type="bg" alpha="50%">black</color>
    <color type="fg">cyan</color>
    <font>standard</font>
  </widget>

  <widget type="text" name="myth_description">
    <color type="bg" alpha="50%">black</color>
    <color type="fg">white</color>
    <font>standard</font>
  </widget>

  <widget type="text" name="description">
    <color type="bg">black</color>
    <color type="fg">white</color>
    <font>standard</font>
  </widget>

  <widget type="text" name="display">
    <color type="bg" alpha="50%">black</color>
    <color type="fg">white</color>
    <font>standard</font>
  </widget>

  <widget type="text" name="busy_text">
    <color type="bg">black</color>
    <color type="fg">white</color>
    <font>large</font>
  </widget>

  <!--
     - Menu widget settings
    -->
  <widget type="menu" name="main_menu">
    <color type="bg">black</color>
    <color type="fg">white</color>
    <color type="hilite_bg">white</color>
    <color type="hilite_fg">black</color>
    <style type="hilite">rounded</style>
    <font>large</font>
  </widget>

  <widget type="menu" name="myth_menu" copy="main_menu"></widget>

  <widget type="menu" name="myth_browser">
    <color type="bg">black</color>
    <color type="fg">white</color>
    <color type="hilite_bg">gray30</color>
    <color type="hilite_fg">white</color>
    <color type="title_bg">green</color>
    <color type="title_fg">black</color>
    <style type="hilite">square</style>
    <style type="border_size">0</style>
    <font>standard</font>
  </widget>

  <widget type="menu" name="file_browser" copy="myth_browser">
    <color type="title_bg">blue</color>
    <color type="title_fg">white</color>
  </widget>

  <widget type="menu" name="popup">
    <color type="bg" alpha="50%">orange</color>
    <color type="fg">black</color>
    <color type="title_bg" alpha="50%">gray60</color>
    <color type="title_fg">white</color>
    <color type="hilite_bg" alpha="50%">white</color>
    <color type="hilite_fg">black</color>
    <color type="checkbox" alpha="50%">red</color>
    <color type="border" alpha="50%">white</color>
    <style type="border_size">2</style>
    <style type="hilite">square</style>
    <font>large</font>
  </widget>

  <widget type="menu" name="myth_delete">
    <color type="bg">black</color>
    <color type="fg">white</color>
    <color type="title_bg">green</color>
    <color type="title_fg">black</color>
    <color type="hilite_bg">gray30</color>
    <color type="hilite_fg">white</color>
    <style type="hilite">square</style>
    <font>large</font>
  </widget>

  <widget type="menu" name="settings">
    <color type="bg">black</color>
    <color type="fg">white</color>
    <color type="title_bg">green</color>
    <color type="title_fg">black</color>
    <color type="hilite_bg">gray30</color>
    <color type="hilite_fg">white</color>
    <style type="hilite">square</style>
    <font>standard</font>
  </widget>

  <!--
     - Dialog widget settings
    -->
  <widget type="dialog" name="warning">
    <color type="bg">gray30</color>
    <color type="fg">white</color>
    <color type="title_bg">red</color>
    <color type="title_fg">white</color>
    <color type="border">red</color>
    <style type="border_size">0</style>
    <font>large</font>
  </widget>

  <widget type="dialog" name="about">
    <color type="bg">gray30</color>
    <color type="fg">white</color>
    <color type="title_bg">gray30</color>
    <color type="title_fg">white</color>
    <color type="border">blue</color>
    <style type="border_size">2</style>
    <font>large</font>
  </widget>

</mvpmctheme>
