<mvpmctheme version="0" name="Worst Theme Ever!">
  <!--
     - example mvpmc theme
     - "Worst Theme Ever!"
     -
     - This is a good example, but it is pretty ugly.
     -
     - http://mvpmc.sourceforge.net/
     - $Id$
    -->

  <!--
     - Load fonts (ignored under X11)
    -->
  <font name="standard">/etc/helvR10.fnt</font>
  <font name="large">/etc/helvB18.pcf</font>

  <!--
     - include font overrides
    -->
  <sinclude>/tmp/font_override.xml</sinclude>

  <!--
     - include settings options
    -->
  <include>/usr/share/mvpmc/settings_1.xml</include>

  <!--
     - Graph widget settings
    -->
  <widget type="graph" name="busy_graph">
    <color type="left">purple</color>
    <color type="right">blue</color>
    <style type="border_size">2</style>
    <color type="bg">red</color>
  </widget>

  <widget type="graph" name="splash_graph">
    <color type="left">red</color>
    <color type="right">purple</color>
    <color type="border">orange</color>
    <style type="border_size">2</style>
    <color type="bg">snow</color>
  </widget>

  <widget type="graph" name="offset_graph">
    <color type="bg" alpha="50%">white</color>
    <color type="left" alpha="50%">purple</color>
    <color type="right" alpha="100%">orange</color>
  </widget>

  <!--
     - Text widget settings
    -->
  <widget type="text" name="splash">
    <color type="bg">lightslategray</color>
    <color type="fg">black</color>
    <color type="border">red</color>
    <style type="border_size">2</style>
    <font>large</font>
  </widget>

  <widget type="text" name="myth_info">
    <color type="bg" alpha="0%">black</color>
    <color type="fg">white</color>
    <color type="border">purple</color>
    <style type="border_size">2</style>
    <font>large</font>
  </widget>

  <widget type="text" name="myth_program">
    <color type="bg" alpha="50%">black</color>
    <color type="fg">green</color>
    <color type="border">purple</color>
    <style type="border_size">2</style>
    <font>large</font>
  </widget>

  <widget type="text" name="myth_description">
    <color type="bg" alpha="50%">orange</color>
    <color type="fg">black</color>
    <color type="border">purple</color>
    <style type="border_size">2</style>
    <font>standard</font>
  </widget>

  <widget type="text" name="description">
    <color type="bg" alpha="50%">black</color>
    <color type="fg">green</color>
    <color type="border">purple</color>
    <style type="border_size">2</style>
  </widget>

  <widget type="text" name="display">
    <color type="bg" alpha="50%">black</color>
    <color type="fg">yellow</color>
    <color type="border">purple</color>
    <style type="border_size">2</style>
  </widget>

  <widget type="text" name="busy_text">
    <color type="bg">red</color>
    <color type="fg">white</color>
    <color type="border">purple</color>
    <style type="border_size">2</style>
    <font>large</font>
  </widget>

  <!--
     - Menu widget settings
    -->
  <widget type="menu" name="main_menu">
    <color type="bg">darkslategray</color>
    <color type="fg">yellow</color>
    <color type="hilite_bg">yellow</color>
    <color type="hilite_fg">blue</color>
    <style type="hilite">rounded</style>
    <color type="border">purple</color>
    <style type="border_size">2</style>
    <font>large</font>
  </widget>

  <widget type="menu" name="myth_menu" copy="main_menu">
    <color type="hilite_fg">darkslategray</color>
    <color type="border">purple</color>
    <style type="border_size">4</style>
    <style type="hilite">square</style>
    <color type="border">purple</color>
    <style type="border_size">2</style>
  </widget>

  <widget type="menu" name="myth_browser">
    <color type="bg">white</color>
    <color type="fg">black</color>
    <color type="hilite_bg">orange</color>
    <color type="hilite_fg">black</color>
    <color type="title_bg">green</color>
    <color type="title_fg">black</color>
    <style type="hilite">rounded</style>
    <color type="border">purple</color>
    <style type="border_size">2</style>
    <font>standard</font>
  </widget>

  <widget type="menu" name="file_browser" copy="myth_browser">
    <color type="bg">white</color>
    <color type="fg">blue</color>
    <color type="title_bg">orange</color>
    <color type="border">yellow</color>
    <style type="border_size">8</style>
  </widget>

  <widget type="menu" name="popup">
    <color type="bg" alpha="50%">red</color>
    <color type="fg">white</color>
    <color type="title_bg" alpha="50%">green</color>
    <color type="title_fg">black</color>
    <color type="hilite_bg">white</color>
    <color type="hilite_fg">orange</color>
    <style type="hilite">rounded</style>
    <color type="checkbox">azure</color>
    <color type="border">purple</color>
    <style type="border_size">2</style>
    <font>standard</font>
  </widget>

  <widget type="menu" name="myth_delete" copy="popup">
    <color type="bg">green</color>
    <color type="hilite_bg">black</color>
    <color type="border">purple</color>
    <style type="border_size">2</style>
    <font>large</font>
  </widget>

  <widget type="menu" name="themes">
    <color type="bg">black</color>
    <color type="fg">green</color>
    <color type="title_bg">white</color>
    <color type="title_fg">black</color>
    <color type="hilite_bg">blue</color>
    <color type="hilite_fg">white</color>
    <color type="checkbox">purple</color>
    <style type="border_size">2</style>
    <color type="border">orange</color>
    <style type="hilite">square</style>
    <font>large</font>
  </widget>

  <!--
     - Dialog widget settings
    -->
  <widget type="dialog" name="warning">
    <color type="bg">orange</color>
    <color type="fg">blue</color>
    <color type="title_bg">red</color>
    <color type="title_fg">black</color>
    <color type="border">pink</color>
    <style type="border_size">8</style>
    <font>large</font>
  </widget>

  <widget type="dialog" name="about">
    <color type="bg">yellow</color>
    <color type="fg">black</color>
    <color type="title_bg">beige</color>
    <color type="title_fg">black</color>
    <color type="border">green</color>
    <style type="border_size">2</style>
    <font>large</font>
  </widget>

  <widget type="dialog" name="mclient">
    <color type="bg">yellow</color>
    <color type="fg">black</color>
    <color type="title_bg">beige</color>
    <color type="title_fg">black</color>
    <color type="border">green</color>
    <style type="border_size">2</style>
    <font>large</font>
  </widget>

  <!--
     - ReplayTV settings
    -->
  <widget type="menu" name="rtv_device_menu" copy="myth_browser">
    <color type="bg">white</color>
    <color type="title_bg">orange</color>
    <color type="border">yellow</color>
    <style type="border_size">8</style>
  </widget>

  <widget type="menu" name="rtv_show_browser" copy="rtv_device_menu">
    <color type="bg">white</color>
    <color type="title_bg">orange</color>
    <color type="border">yellow</color>
    <style type="border_size">8</style>
  </widget>

  <widget type="menu" name="rtv_show_popup" copy="popup">
    <color type="bg">green</color>
    <color type="hilite_bg">black</color>
    <color type="border">purple</color>
    <style type="border_size">2</style>
    <font>large</font>
  </widget>

  <widget type="graph" name="rtv_discspace_graph">
    <color type="fg">purple</color>
    <color type="bg">snow</color>
    <color type="border">orange</color>
    <style type="border_size">2</style>
  </widget>

  <widget type="text" name="rtv_discovery_splash">
    <color type="bg">lightslategray</color>
    <color type="fg">black</color>
    <color type="border">red</color>
    <style type="border_size">2</style>
    <font>large</font>
  </widget>

  <widget type="text" name="rtv_device_description">
    <color type="bg">black</color>
    <color type="fg">orange3</color>
    <font>large</font>
  </widget>

  <widget type="text" name="rtv_episode_description">
    <color type="bg">black</color>
    <color type="fg">orange3</color>
    <font>large</font>
  </widget>

  <widget type="text" name="rtv_osd_show_title">
    <color type="bg" alpha="50%">yellow</color>
    <color type="fg">purple</color>
    <font>large</font>
  </widget>

  <widget type="text" name="rtv_osd_show_description">
    <color type="bg" alpha="50%">yellow</color>
    <color type="fg">snow2</color>
    <font>large</font>
  </widget>

  <widget type="text" name="rtv_message_window">
    <color type="bg">gray50</color>
    <color type="fg">purple</color>
    <font>large</font>
    <color type="border">purple</color>
    <style type="border_size">6</style>
  </widget>

  <widget type="text" name="rtv_seek_osd">
    <color type="bg" alpha="50%">black</color>
    <color type="fg">yellow</color>
    <color type="border">purple</color>
    <style type="border_size">2</style>
    <font>large</font>
  </widget>

  <settings name="mythtv_livetv">
    <color type="current">yellow</color>
  </settings>

  <settings name="mythtv_pending">
    <color type="recording">blue</color>
    <color type="will_record">purple</color>
    <color type="conflict">brown</color>
    <color type="other">gold</color>
  </settings>

  <settings name="osd">
    <item name="clock">on</item>
    <item name="bitrate">off</item>
  </settings>

  <!--
     - include user theme overrides
    -->
  <sinclude>/tmp/user_override.xml</sinclude>

</mvpmctheme>
